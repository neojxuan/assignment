<%= form_with(model: @task, local: true) do |form| %>
  <div>
    <%= form.label :body %><br>
    <%= form.text_field :body %>
    <% @task.errors.full_messages_for(:body).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>